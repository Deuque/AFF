<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgshape3"
    android:layout_margin="12dp">

  <RelativeLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
          android:id="@+id/carimg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@mipmap/car2"
          android:scaleType="fitXY"
          app:siShape="@drawable/bgshape3"/>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <VideoView
             android:id="@+id/carvid"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"/>
         <pl.droidsonroids.gif.GifImageView
             android:id="@+id/bgif"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_centerInParent="true"
             android:src="@drawable/ld7"
             android:visibility="invisible" />
         <ImageView
             android:id="@+id/delete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentTop="true"
             android:src="@drawable/delete"
             android:padding="5dp"
             android:tint="@android:color/holo_red_light"/>
         <ImageView
             android:id="@+id/type"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_alignParentEnd="true"
             android:layout_alignParentBottom="true"
             android:src="@drawable/video"
             android:background="@drawable/bgshape1"
             android:backgroundTint="@color/mytransparent"
             android:padding="10dp"
             android:tint="@color/aux2"
             android:layout_margin="4dp"/>
     </RelativeLayout>

      <View
          android:layout_width="160dp"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:background="@drawable/gradient4"/>

      <TextView
          android:id="@+id/cartext"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="15dp"
          android:fontFamily="@font/poppins"
          android:text="A.F.F Entertainment \nWorld'"
          android:textColor="@color/aux1"
          android:textSize="15sp"
          android:textStyle="bold"/>
  </RelativeLayout>
</RelativeLayout>