<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:siShape="@drawable/bgshape3"
            android:src="@mipmap/ec2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Allan Echezona"
            android:textColor="@color/aux1"
            android:textSize="15sp"
            android:maxLines="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Distributive Director"
            android:textColor="@color/aux2"
            android:textSize="13sp"
            android:maxLines="1"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:siShape="@drawable/bgshape3"
            android:src="@mipmap/ec1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Emily Kawaski"
            android:textColor="@color/aux1"
            android:textSize="15sp"
            android:maxLines="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Chief Editor"
            android:textColor="@color/aux2"
            android:textSize="13sp"
            android:maxLines="1"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:siShape="@drawable/bgshape3"
            android:src="@mipmap/ec3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Mariano Diaz"
            android:textColor="@color/aux1"
            android:textSize="15sp"
            android:maxLines="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Field Organizer"
            android:textColor="@color/aux2"
            android:textSize="13sp"
            android:maxLines="1"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
</HorizontalScrollView>